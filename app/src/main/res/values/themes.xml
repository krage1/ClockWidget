<resources>
    <!-- Base application theme. -->
    <style name="Theme.ClockWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonAddStyle">
        <item name="android:background">@drawable/bakground_button_final_selector</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_color_button_add</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:shadowColor">#483518</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="ButtonNormalStyle">
        <item name="android:background">@drawable/backround_button_selector</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/text_color_button_normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:shadowColor">#483518</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/background_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">#211d1d</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="UserRadioButton" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/rbtn_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.ClockWidget" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Стиль для нашего разделителя в RecyclerView -->
    <style name="RecyclerViewDivider" parent="Widget.Material3.MaterialDivider">
        <!-- Задаем цвет разделителя. Можно использовать свой цвет -->
        <item name="dividerColor">@color/transparent</item>
        <!-- Задаем толщину (высоту) разделителя. Измените это значение по вашему вкусу -->
        <item name="dividerThickness">8dp</item>
    </style>

</resources>
